<style>
#invoice-POS{
  box-shadow: 0 0 1in -0.25in rgba(0, 0, 0, 0.5);
  padding:2mm;
  margin: 0 auto;
  width: 110mm;
  background: #FFF;
  
  ::selection {background: #f31544; color: #FFF;}
  ::moz-selection {background: #f31544; color: #FFF;}
}
<%e = Employee.find(params[:id]) %>
</style>
<div>
  <div class="row-print">

    <center id="top">
      <div class="logo">
        <%= image_tag url_for(e.image), width: 200, height: 200%>
      </div>
      <div class="info"> 
       <!--  <h2>DIY Eatery</h2> -->
      </div><!--End Info-->
    </center><!--End InvoiceTop-->

   <div id="bot">

    <div id="table" class="panel_contents panel">
      <table>
        <tr class="tabletitle">
          <td class="item"><h2 class="itemtext">Name</h2></td>
          <td class="Hours"><h2 class="itemtext">Amount Income</h2></td>
          <td class="Rate"><h2 class="itemtext">Amount Subtracted</h2></td>
        </tr>


        <tr class="service">
          <td class="tableitem"><p class="itemtext"> Base Salary </p></td>
          <td class="tableitem"><p class="itemtext"><%= e.employee_compensation.salary %></p></td>
          <td class="tableitem"><p class="itemtext"> 0 </p></td>
        </tr>

        <tr class="service">
          <td class="tableitem"><p class="itemtext"> EOBI </p></td>
          <td class="tableitem"><p class="itemtext">0</p></td>
          <td class="tableitem"><p class="itemtext"> <%= (e.employee_compensation.salary*e.employee_compensation.EOBI_percentage)/100 %> </p></td>
        </tr>

        <tr class="service">
          <td class="tableitem"><p class="itemtext"> Income Tax </p></td>
          <td class="tableitem"><p class="itemtext">0</p></td>
          <td class="tableitem"><p class="itemtext"> <%= (e.employee_compensation.salary* AppConstant::INCOME_TAX)/100 %> </p></td>
        </tr>
        
        <tr class="service">
          <td></td>
          <td class="tableitem"><h2 class="itemtext">Gross Pay</h2></td>
          <td class="tableitem"><h2 class="itemtext">Rs.<%=e.employee_compensation.salary - (e.employee_compensation.salary*e.employee_compensation.EOBI_percentage)/100 - (e.employee_compensation.salary *  AppConstant::INCOME_TAX)/100 %></h2></td>
        </tr>


      </table>
    </div><!--End Table-->

    <div id="legalcopy">
      <p class="legal"><strong>This is a computer generated slip</strong>Â </br>
      </p>
    </div>

  </div><!--End InvoiceBot-->
</div><!--End Invoice-->
</div>
